%br
.container.my-other-projects
  %h3 Some of my projects
  %br
  .row.other-projects
    - data.projects.each do |project|
      .col-md-4
        .hover.panel
          .card.mb-4.box-shadow.front
            /%a{:href => project[:internal_link]}>
            %img.card-img-top{:src => "/images/#{project[:coverimage]}.png", :style => "width: 100%; height: 225px; display: block;"}

          .card.mb-4.box-shadow.back
            .card-body
              %br
              %h3.mt-0.mb-1= project[:name]
              %p= project[:short_description]
              %br
              %a{:href => project[:internal_link]}>
                %button.btn.btn-outline-light.btn-block{:type => "button"} View project
              %br
  %br
  %br
  %br
  %br
  %br
