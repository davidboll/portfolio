- project = data.projects.select { |project| project[:id] == 3 }.first
%a.getback{:href => 'index.html'}> << Take me back home
.container-fluid.bg-dark
  .row
    .col-md-6.height-full.left-col{style: "background-image: url(images/#{project[:coverimage]}-dark.png);"}
      .cols.otherProjects
        %h1= project[:name]
        %h5= project[:short_description]
    .col-md-6.height-full.right
      .cols.otherProjects
        = partial 'partials/_come-at-me'

.container-fluid
  .row
    .col.description{style: "background-color: #474787;"}
      .cols.singleProject
        %h1= project[:name]
        %br
        %p= project[:description]
        %br
        .cols{style: "text-align: center;"}
          %hr
          %br
          %br
          %h4 See full project on GitHub
          %br
          %a{:href => project[:external_link], :target => '_blank'}>
            %i.fab.fa-github.fa-5x
